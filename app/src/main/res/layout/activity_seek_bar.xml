<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <com.gaoyu.seekbar.SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        app:progress="50"
        app:slider_bg="@mipmap/any_pic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/bg_color_gray_white_tint" />

    <com.gaoyu.seekbar.SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        app:bg_drawable="@drawable/simple_bg"
        app:bg_line_width="100px"
        app:progress="0"
        app:slider_bg="@mipmap/any_pic"
        app:pg_drawable="@drawable/simple_pg_bitmap"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/bg_color_gray_white_tint" />

    <com.gaoyu.seekbar.SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        app:max_text="6"
        app:slider_bg="@drawable/simple_slider"
        app:slider_height="50px"
        app:text_offset="-2px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_remove_slider"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="移除滑块"
            android:textSize="37px" />

        <View
            android:layout_width="20px"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_data"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:textSize="37px" />
    </LinearLayout>

</LinearLayout>